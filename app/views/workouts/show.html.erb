<div id="workout">
  <p><%= @workout.date %></p>
  <p><%= @workout.workout %></p>
  <p><%= @workout.mood %></p>
  <p><%= @workout.length %></p>
  
  <p><%= link_to "Home", root_path %> |
     <%= link_to "Edit", edit_workout_path(@workout) %> |
     <%= link_to "Delete", workout_path(@workout), method: :delete,
                           data: { confirm: "Are you sure?" } %></p>
</div>